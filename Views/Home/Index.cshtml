@{
    ViewData["Title"] = "Home";
}

<div class="py-5 bg-violet-purple">
    <div class="container my-5 py-5">
        <h1 class="display-3"><span class="fw-bold">
                Creativity</span><br>doesn't have to be <span class="fw-bold">costly</span>
        </h1>
        <p class="fw-bold h3 mb-4">Royalty free PBR textures</p>
