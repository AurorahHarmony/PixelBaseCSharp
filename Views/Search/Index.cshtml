@model IEnumerable<PixelBase.Models.Asset>

@{
  ViewData["Title"] = "Search";
}

<div class="pt-5 container">
  <div class="row g-4 g-xxl-4 mb-5">
    @foreach (var asset in Model)
    {
      <div class="col-6 col-md-4 col-lg-3">
        <div class="ratio ratio-1x1">
          <a asp-controller="asset" asp-action="@asset.Id" class="item-card hoverable">
            <div class="rounded-circle h-100 w-100 texture-skeleton-loader"></div>
            <div class="item-name">@Html.DisplayFor(modelItem => asset.Title)</div>
          </a>
        </div>
      </div>
    }
  </div>

  <nav>
    <ul class="pagination justify-content-end">
      <li class="page-item disabled">
        <a class="page-link">Previous</a>
      </li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="#">Next</a>
      </li>
    </ul>
  </nav>
</div>